#!/usr/bin/env bash

export INPUT_FILE=$(mktemp)
export OUTPUT_FILE=$(mktemp)

if [[ -e $INPUT_FILE ]]; then
  rm $INPUT_FILE
fi 
mkfifo $INPUT_FILE

if [[ -e $OUTPUT_FILE ]]; then
  rm $OUTPUT_FILE
fi
mkfifo $OUTPUT_FILE 

trap 'rm $INPUT_FILE;rm $OUTPUT_FILE;kill 0' EXIT
coproc forge script --ffi $@
echo -n "> "
while IFS='$\n' read -r LINE; do
  echo "$LINE" >$INPUT_FILE
  read IN <$OUTPUT_FILE
  echo $IN
  if ! ps -p $COPROC_PID > /dev/null; then
    break
  fi
  echo -n "> "
done
